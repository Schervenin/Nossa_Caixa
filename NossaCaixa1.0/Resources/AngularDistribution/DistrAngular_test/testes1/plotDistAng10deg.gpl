# Plot  Angular Distribution

set xlabel "theta"
set ylabel "phi"
set xrange[0:180]
set yrange[0:360]
set hidden3d
set contour base

dt = 10;

splot 'teste10degTP.dat' matrix u ($1*dt):($2*dt):3 w l

pause -1 "enter for image plot"

splot 'teste10degTP.dat' matrix u ($1*dt):($2*dt):3 w image


pause -1 "enter for Theta plot"
unset yrange
unset xrange
set ylabel "Intensity (arb. units)"

plot [0:180][0:] 'teste10degTheta.dat' u 1:2 w l

pause -1 "enter for Phi plot"
set xlabel "phi"

plot [0:360][0:] 'teste10degPhi.dat' u 1:2 w l

unset xlabel
unset ylabel
unset hidden3d
unset contour



