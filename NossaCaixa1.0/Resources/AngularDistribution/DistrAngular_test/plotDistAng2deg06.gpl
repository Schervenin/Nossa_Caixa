# Plot  Angular Distribution

set xlabel "theta"
set ylabel "phi"
set xrange[0:180]
set yrange[0:360]
set hidden3d
set contour base

dt = 2;

splot 'teste2deg06TP.dat' matrix u ($1*dt):($2*dt):3 w l

pause -1 "enter for image plot"

splot 'teste2deg06TP.dat' matrix u ($1*dt):($2*dt):3 w image


pause -1 "enter for Theta plot"
unset yrange
unset xrange
set ylabel "Intensity (arb. units)"

plot [0:180][0:] 'teste2deg06Theta.dat' u 1:2 w l

pause -1 "enter for Phi plot"
set xlabel "phi"

plot [0:360][0:] 'teste2deg06Phi.dat' u 1:2 w l


pause -1 "enter for Theta Random plot"
unset yrange
unset xrange
set ylabel "Intensity (arb. units)"
set xlabel "theta"

plot [0:180][0:] 'teste2deg06ThetaRand.dat' u 1:2 w lp pt 7 ps 0.5

pause -1 "enter for Theta Random polar plot"

set polar
set angle degrees
set grid polar 45
set grid ls 10
set rtics 0.005

plot 'teste2deg06ThetaRand.dat' u ($1):($2/4100*0.12*0.12) w lp pt 7 ps 0.5

pause -1 "enter for Theta polar plot"

plot 'teste2deg06Theta.dat' u ($1):($2) w lp pt 7 ps 0.5

pause -1 "enter for Phi polar plot"

plot 'teste2deg06Phi.dat' u ($1):($2) w lp pt 7 ps 0.5

pause -1 "enter for Phi Random polar plot"

plot 'teste2deg06PhiRand.dat' u ($1):($2/4100*0.12*0.12) w lp pt 7 ps 0.5

pause -1 "enter for Phi polar plot fot Theta 90 degrees"

set rtics 0.02
plot 'teste2deg06TP.dat' u ($0*2):($45*20.) w lp pt  7 ps 0.5

# before end: unset

unset polar
unset rtics

unset xlabel
unset ylabel
unset hidden3d
unset contour




